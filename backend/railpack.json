{
  "$schema": "https://schema.railpack.com",
  "provider": "python",
  "packages": {
    "python": "3.12"
  },
  "steps": {
    "install": {
      "commands": [
        "pip install --no-cache-dir -r requirements.txt"
      ]
    }
  },
  "deploy": {
    "startCommand": "python -m uvicorn app.main:app --host 0.0.0.0 --port ${PORT:-8000}"
  }
}
